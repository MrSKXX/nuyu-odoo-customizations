<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Room Transfer Form View -->
        <record id="view_room_transfer_form" model="ir.ui.view">
            <field name="name">medical.room.transfer.form</field>
            <field name="model">medical.room.transfer</field>
            <field name="arch" type="xml">
                <form string="Room Transfer">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" 
                                states="draft" class="btn-primary"/>
                        <button name="action_done" type="object" string="Mark Done" 
                                states="confirmed" class="btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel" 
                                states="draft,confirmed"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="responsible_user_id"/>
                            </group>
                            <group>
                                <field name="source_location_id" domain="[('location_type', 'in', ['warehouse', 'room1', 'room2', 'room3', 'doctor_private'])]"/>
                                <field name="dest_location_id" domain="[('location_type', 'in', ['warehouse', 'room1', 'room2', 'room3', 'doctor_private'])]"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="lot_id" domain="[('product_id', '=', product_id)]"/>
                                        <field name="quantity"/>
                                        <field name="quantity_available"/>
                                        <field name="expiry_date"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Room Transfer Tree View -->
        <record id="view_room_transfer_tree" model="ir.ui.view">
            <field name="name">medical.room.transfer.tree</field>
            <field name="model">medical.room.transfer</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='draft'" decoration-success="state=='done'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="source_location_id"/>
                    <field name="dest_location_id"/>
                    <field name="responsible_user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- Room Transfer Action -->
        <record id="action_room_transfer" model="ir.actions.act_window">
            <field name="name">Room Transfers</field>
            <field name="res_model">medical.room.transfer</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first room transfer
                </p>
                <p>
                    Track and manage transfers between treatment rooms and main warehouse.
                </p>
            </field>
        </record>
        
    </data>
</odoo>